<!DOCTYPE html>
<html>
  <head>
    <title>AtoZ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if current_user %>
      <script>
        window.user = {
          'id': <%=user.id%>,
          'email': <%=user.email%>,
        }
      </script>
    <%end%>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
